@model DevSkill.Inventory.Web.Models.RegisterModel

<h4 class="text-center mb-4 text-success fw-bold">Create New Account</h4>

<form method="post" asp-action="Register" class="animate__animated animate__fadeIn">
    <div class="row g-3">
        <!-- First Name -->
        <div class="col-md-6">
            <div class="form-floating">
                <input asp-for="FirstName" class="form-control shadow-sm" placeholder="First Name" />
                <label asp-for="FirstName">First Name</label>
                <span asp-validation-for="FirstName" class="text-danger small"></span>
            </div>
        </div>

        <!-- Last Name -->
        <div class="col-md-6">
            <div class="form-floating">
                <input asp-for="LastName" class="form-control shadow-sm" placeholder="Last Name" />
                <label asp-for="LastName">Last Name</label>
                <span asp-validation-for="LastName" class="text-danger small"></span>
            </div>
        </div>

@*         <!-- Date of Birth -->
        <div class="col-12">
            <div class="form-floating">
                <input asp-for="DateOfBirth" class="form-control shadow-sm" type="date" />
                <label asp-for="DateOfBirth">Date of Birth</label>
                <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
            </div>
        </div> *@

        <!-- Email -->
        <div class="col-12">
            <div class="form-floating">
                <input asp-for="Email" class="form-control shadow-sm" placeholder="Email" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
        </div>

        <!-- Password -->
        <div class="col-md-6">
            <div class="form-floating">
                <input asp-for="Password" class="form-control shadow-sm" type="password" placeholder="Password" />
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
        </div>

        <!-- Confirm Password -->
        <div class="col-md-6">
            <div class="form-floating">
                <input asp-for="ConfirmPassword" class="form-control shadow-sm" type="password" placeholder="Confirm Password" />
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="col-12">
            <button type="submit" class="btn btn-submit px-5 py-2 fw-semibold shadow">
                <i class="fa fa-user-plus me-2"></i> Register
            </button>
        </div>
    </div>
</form>

<p class="text-center mt-4 text-muted">
    Already have an account?
    <span class="toggle-link text-decoration-none text-primary fw-semibold" onclick="showLogin()">Back to Login</span>
</p>
