@model DevSkill.Inventory.Web.Models.AuthCombinedModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Authentication | Inventory</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #00b4db, #0083b0);
            font-family: 'Segoe UI', sans-serif;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .auth-card {
            background-color: #ffffff;
            border-radius: 15px;
            padding: 40px 30px;
            width: 100%;
            max-width: 450px;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
            transition: all 0.5s ease-in-out;
            animation: slideUpFadeIn 0.6s ease-out;
        }

        @@keyframes slideUpFadeIn {
            from

        {
            transform: translateY(20px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }

        }

        h4 {
            font-weight: 600;
            color: #333;
        }

        .toggle-link {
            cursor: pointer;
            color: #007bff;
            text-decoration: none;
            font-weight: 500;
        }

            .toggle-link:hover {
                text-decoration: underline;
            }

        .form-floating label {
            font-size: 0.9rem;
            color: #555;
        }

        .btn-primary, .btn-success {
            font-weight: 500;
            border-radius: 8px;
            padding: 10px 0;
        }

        #registerForm, #loginForm {
            animation: fade 0.4s ease-in-out;
        }

        .btn-submit {
            background: linear-gradient(135deg, #28a745, #218838);
            color: white;
            border: none;
            border-radius: 30px;
            transition: all 0.3s ease-in-out;
            box-shadow: 0 4px 12px rgba(40, 167, 69, 0.3);
        }

        .btn-submit:hover {
            background: linear-gradient(135deg, #218838, #1e7e34);
            transform: scale(1.05);
            box-shadow: 0 6px 18px rgba(40, 167, 69, 0.45);
        }

        .btn-submit:active {
            transform: scale(0.97);
            box-shadow: 0 2px 8px rgba(40, 167, 69, 0.4);
        }



        @@keyframes fade {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }
    </style>
</head>
<body>
    <div class="auth-card">
        <!-- Login Form -->
        <div id="loginForm">
            @await Html.PartialAsync("_LoginPartial", Model.Login)
        </div>

        <!-- Register Form -->
        <div id="registerForm" style="display: none;">
            @await Html.PartialAsync("_RegisterPartial", Model.Register)
        </div>
    </div>

    <script>
        function showRegister() {
            document.getElementById('loginForm').style.display = 'none';
            document.getElementById('registerForm').style.display = 'block';
        }

        function showLogin() {
            document.getElementById('registerForm').style.display = 'none';
            document.getElementById('loginForm').style.display = 'block';
        }
    </script>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
