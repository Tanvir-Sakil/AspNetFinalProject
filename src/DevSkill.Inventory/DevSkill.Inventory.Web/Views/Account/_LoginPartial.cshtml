@model DevSkill.Inventory.Web.Models.LoginModel

<h4 class="text-center mb-4 text-primary fw-bold">Welcome</h4>

<form method="post" asp-action="Login" class="animate__animated animate__fadeIn">
    <div class="form-floating mb-3">
        <input asp-for="Email" class="form-control shadow-sm" placeholder="Email" />
        <label asp-for="Email">Email</label>
        <span asp-validation-for="Email" class="text-danger small"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Password" class="form-control shadow-sm" type="password" placeholder="Password" />
        <label asp-for="Password">Password</label>
        <span asp-validation-for="Password" class="text-danger small"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="RememberMe" />
        <label class="form-check-label" asp-for="RememberMe">Remember Me</label>
    </div>

    <button type="submit" class="btn btn-submit px-5 py-2 fw-semibold shadow">
        <i class="fas fa-sign-in-alt me-2"></i> Log In
    </button>
</form>

<p class="text-center mt-4 text-muted">
    Don't have an account?
    <span class="toggle-link text-decoration-none text-info fw-semibold" onclick="showRegister()"> Register here</span>
</p>
