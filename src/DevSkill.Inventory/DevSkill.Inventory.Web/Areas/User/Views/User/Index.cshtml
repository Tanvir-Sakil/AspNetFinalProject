@* @model StaffListModel *@
@{
    ViewData["Title"] = "Users";
}

@section Styles
{
    <link rel="stylesheet" href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/3.0.2/css/buttons.dataTables.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
}

<div class="app-content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6"><h3 class="mb-0">User</h3></div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">User</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="app-content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="card-title">User List</h3>
                <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#addUserModal">
                    <i class="fas fa-plus"></i> New User
                </button>
            </div>
            <div class="card-body">
                <table id="userTable" class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#SN.</th>
                            <th>Employee</th>
                            <th>Company</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_AddUserModal" />

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.min.js"></script>
    <script>
        $(function () {
            let table = $('#userTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '/User/GetUserListJsonData',
                    type: 'POST',
                    contentType: 'application/json',
                    data: function (d) {
                        return JSON.stringify(d);
                    }
                },
                columns: [
                    { data: null, render: (data, type, row, meta) => meta.row + 1 },
                    { data: "employee" },
                    { data: "company" },
                    { data: "email" },
                    { data: "mobile" },
                    { data: "role" },
                    {
                        data: "status",
                        render: data => data ? '<span class="badge bg-success">Active</span>' : '<span class="badge bg-danger">Inactive</span>'
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return `
                                <button class='btn btn-info btn-sm' onclick="window.location.href='/admin/User/edit/${data}'">
                                    <i class='fas fa-pencil-alt'></i> Edit
                                </button>
                                <button class='btn btn-danger btn-sm delete-user' data-id='${data}'>
                                    <i class='fas fa-trash'></i> Delete
                                </button>`;
                        }
                    }
                ]
            });

            $('#userTable').on('click', '.delete-user', function () {
                const id = $(this).data("id");
                if (confirm("Are you sure to delete this User?")) {
                    $.post('/User/delete/' + id, () => table.ajax.reload());
                }
            });
        });
    </script>

    <script>
        $(document).ready(function () {
          $.getJSON('/Staff/GetAllStaff', function (data) {
            let options = '<option value="">Select One</option>';
            $.each(data, function (i, emp) {
              options += `<option value="${emp.id}">${emp.name}</option>`;
            });
            $('#employeeDropdown').html(options);
          });

            $.getJSON('/Settings/UserRole/GetAllUserRole', function (data) {
            let options = '<option value="">Select One</option>';
            $.each(data, function (i, role) {
              options += `<option value="${role.id}">${role.name}</option>`;
            });
            $('#roleDropdown').html(options);
          });

          $('#userForm').submit(function (e) {
            e.preventDefault();
            console.log($(this).serialize());
            $.ajax({
              url: '/Admin/User/Add', 
              method: 'POST',
              data: $(this).serialize(),
              success: function () {
                alert('User created successfully!');
                $('#userModal').modal('hide');
                $('#userTable').DataTable().ajax.reload();
              }
            });
          });
        });
    </script>
}

