@using DevSkill.Inventory.Application.Features.Units.Commands
@model AddUnitCommand
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Unit Information</h3>
    </div>
    <div class="card-body">
        <form id="createUnitForm">
            <div class="form-group">
                <label>Unit Name *</label>
                <input type="text" name="Name" class="form-control" placeholder="Unit Name" required />
            </div>
            <input type="hidden" name="IsActive" value="true" />
            <div class="form-group">
                <button type="submit" class="form-control btn btn-primary" style="margin-top: 1px;">
                    <i class="far fa-save"></i>&nbsp;&nbsp;Submit
                </button>
            </div>
        </form>
    </div>
</div>

