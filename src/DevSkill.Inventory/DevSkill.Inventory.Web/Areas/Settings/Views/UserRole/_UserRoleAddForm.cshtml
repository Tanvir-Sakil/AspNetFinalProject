@using DevSkill.Inventory.Application.Features.UserRoles.Commands
@model AddUserRoleCommand

<div class="card">
    <div class="card-header">
        <h3 class="card-title">UserRole Information</h3>
    </div>
    <div class="card-body">
        <form id="createUserRoleForm">
            <div class="form-group">
                <label>UserRole Name *</label>
                <input type="text" name="RoleName" class="form-control" placeholder="UserRole Name" required />
            </div>

                <div class="form-group">
                    <label>Company Name *</label>
                <select class="form-control" name="CompanyName" required>
                        <option value="">Select Company</option>
                        <option value="RisingIt">BikroiBee</option>
                    </select>
                </div>
                <input type="hidden" name="IsActive" value="true" />
                <div class="form-group">
                <button type="submit" class="form-control btn btn-primary" style="margin-top: 3px;>
                        <i class="far fa-save"></i>&nbsp;&nbsp;Submit
                    </button>
                </div>
        </form>
    </div>
</div>

