@using DevSkill.Inventory.Application.Features.Expenses.Commands
@model AddExpenseCommand

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Expense Information</h3>
    </div>
    <div class="card-body">
        <form id="createExpenseForm">
            <div class="form-group">
                <label>Expense Name *</label>
                <input type="text" name="Name" class="form-control" placeholder="Expense Name" required />
            </div>
            <input type="hidden" name="IsActive" value="true" />
            <div class="form-group">
                <button type="submit" class="form-control btn btn-primary" style="margin-top:3px;">
                    <i class="far fa-save"></i>&nbsp;&nbsp;Submit
                </button>
            </div>
        </form>
    </div>
</div>

