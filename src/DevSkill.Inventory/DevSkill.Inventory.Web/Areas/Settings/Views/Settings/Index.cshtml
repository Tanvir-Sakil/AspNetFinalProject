@using DevSkill.Inventory.Web.Areas.Settings.Models
@model SettingsViewModel
@{
    ViewData["Title"] = "Settings";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        .info-box {
            display: flex;
            align-items: center;
            padding: 10px;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
            text-decoration: none;
            color: black;
        }

            .info-box:hover {
                transform: scale(1.02);
                text-decoration: none;
                color: black;
            }

        .info-box-icon {
            font-size: 2rem;
            width: 50px;
            text-align: center;
        }

        .info-box-content {
            margin-left: 10px;
        }
    </style>
}

<div class="content-wrapper" style="min-height: 838.625px;">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Setting</h1>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-3 col-sm-6 col-12">
                                <a href="/Settings/Category" class="info-box" style="background-color:#c2a5d6;">
                                    <span class="info-box-icon"><i class="fas fa-tags"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Category</span>
                                        <span class="info-box-number">@Model.CategoryTotal</span>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-3 col-sm-6 col-12">
                                <a href="/Settings/Unit" class="info-box" style="background-color:#e1b2dc;">
                                    <span class="info-box-icon"><i class="fas fa-balance-scale"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Unit</span>
                                        <span class="info-box-number">@Model.UnitTotal</span>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-3 col-sm-6 col-12">
                                <a href="/Settings/Expense" class="info-box" style="background-color:#c9bfe3;">
                                    <span class="info-box-icon"><i class="fas fa-file-invoice-dollar"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Expense Type</span>
                                        <span class="info-box-number">@Model.ExpenseTotal</span>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-3 col-sm-6 col-12">
                                <a href="/Settings/Department" class="info-box" style="background-color:#f0d2e9;">
                                    <span class="info-box-icon"><i class="fas fa-building"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Department</span>
                                        <span class="info-box-number">@Model.DepartmentTotal</span>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-3 col-sm-6 col-12">
                                <a href="/Settings/CashAccount" class="info-box" style="background-color:#c2a5d6;">
                                    <span class="info-box-icon"><i class="fas fa-wallet"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Cash Account</span>
                                        <span class="info-box-number">@Model.CashTotal</span>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-3 col-sm-6 col-12">
                                <a href="/Settings/BankAccount" class="info-box" style="background-color:#e1b2dc;">
                                    <span class="info-box-icon"><i class="fas fa-university"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Bank Account</span>
                                        <span class="info-box-number">@Model.BankTotal</span>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-3 col-sm-6 col-12">
                                <a href="/Settings/MobileAccount" class="info-box" style="background-color:#c9bfe3;">
                                    <span class="info-box-icon"><i class="fas fa-mobile-alt"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Mobile Account</span>
                                        <span class="info-box-number">@Model.MobileTotal</span>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-3 col-sm-6 col-12">
                                <a href="/Settings/Role" class="info-box" style="background-color:#c2a5d6;">
                                    <span class="info-box-icon"><i class="fas fa-users-cog"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">User Type</span>
                                        <span class="info-box-number">@Model.RoleTotal</span>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-3 col-sm-6 col-12">
                                <a href="/BalanceTransfers" class="info-box" style="background-color:#e1b2dc;">
                                    <span class="info-box-icon"><i class="fas fa-exchange-alt"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Balance Transfer</span>
                                        <span class="info-box-number">@Model.BalanceTotal</span>
                                    </div>
                                </a>
                            </div>
                        </div> 
                    </div> 
                </div> 
            </div>
            </div>
    </section>
</div>

