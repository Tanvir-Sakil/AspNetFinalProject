@{
    ViewData["Title"] = "Users";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/3.0.2/css/buttons.dataTables.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .header-title {
            font-weight: 700;
            font-size: 1.8rem;
        }

        .card {
            border-radius: 12px;
            border: none;
        }

        .card-header {
            background-color: #ffffff;
            border-bottom: 1px solid #dee2e6;
        }

        .btn-add-user {
            float: right;
            background-color: #198754;
            color: white;
        }

            .btn-add-user i {
                margin-right: 5px;
            }

        .form-control, .form-select {
            border-radius: 6px;
        }

        .search-box label {
            font-weight: 500;
            font-size: 0.9rem;
        }

        .search-box .row > div {
            padding-right: 12px;
        }

        #userTable {
            margin-top: 20px;
        }

        .dataTables_wrapper .dataTables_filter {
            float: right;
        }

        .badge {
            font-size: 0.75rem;
        }

        .table th {
            font-weight: 600;
        }

        .btn-sm i {
            margin-right: 4px;
        }
    </style>
}

<div class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="header-title">User Management</h2>
        <button class="btn btn-add-user btn-sm" data-bs-toggle="modal" data-bs-target="#addUserModal">
            <i class="fas fa-user-plus"></i> Add User
        </button>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body search-box">
            <h5 class="mb-3"><i class="fas fa-search me-2"></i>Filter Users</h5>
            <div class="row">
                <div class="col-md-3">
                    <label>Employee</label>
                    <input type="text" id="searchEmployee" class="form-control" placeholder="Search by name" />
                </div>
                <div class="col-md-3">
                    <label>Email</label>
                    <input type="text" id="searchEmail" class="form-control" placeholder="Search by email" />
                </div>
                <div class="col-md-3">
                    <label>Role</label>
                    <input type="text" id="searchRole" class="form-control" placeholder="Search by role" />
                </div>
                <div class="col-md-3">
                    <label>Status</label>
                    <select id="searchStatus" class="form-select">
                        <option value="">All</option>
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                </div>
            </div>
            <div class="text-end mt-3">
                <button id="searchUsers" class="btn btn-primary btn-sm">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table id="userTable" class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>#SN</th>
                        <th>Employee</th>
                        <th>Company</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<partial name="_AddUserModal" />
<div id="editUserModalContainer"></div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.min.js"></script>

    <script>
        $(function () {
            const table = $('#userTable').DataTable({
                processing: true,
                ajax: {
                    url: '/UserManagement/User/GetUserListJsonData',
                    type: 'POST',
                    contentType: "application/json",
                    dataType: "json",
                    data: function (d) {
                        return JSON.stringify(d);
                    }
                },
                columns: [
                    { data: null, render: (data, type, row, meta) => meta.row + 1 },
                    { data: "userName" },
                    { data: "companyName" },
                    { data: "email" },
                    { data: "roleName" },
                    {
                        data: "isActive",
                        render: data => data ? '<span class="badge bg-success">Active</span>' : '<span class="badge bg-danger">Inactive</span>'
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return `
                                 <button class="edit-user-btn text-primary" data-id="${data}" title="Edit">
                                    <i class="fas fa-edit"></i> Edit
                                </button>
                                <button class='btn btn-danger btn-sm delete-user' data-id='${data}'>
                                    <i class='fas fa-trash'></i> Delete
                                </button>`;
                        },
                        className: 'text-center'
                    }
                ]
            });

            $('#userTable').on('click', '.delete-user', function () {
                const id = $(this).data("id");
                if (confirm("Are you sure to delete this User?")) {
                    $.post('/UserManagemetn/User/delete/' + id, () => table.ajax.reload());
                }
            });
        });

        $(document).ready(function () {
            $.getJSON('/UserManagement/Staff/GetAllStaff', function (data) {
                let options = '<option value="">Select One</option>';
                $.each(data, function (i, emp) {
                    options += `<option value="${emp.id}">${emp.name}</option>`;
                });
                $('#employeeDropdown').html(options);
            });

            $.getJSON('/Settings/Role/GetAllUserRole', function (data) {
                let options = '<option value="">Select One</option>';
                $.each(data, function (i, role) {
                    options += `<option value="${role.id}">${role.name}</option>`;
                });
                $('#roleDropdown').html(options);
            });

            $('#userForm').submit(function (e) {
                e.preventDefault();
                $.ajax({
                    url: '/UserManagement/User/Add',
                    method: 'POST',
                    data: $(this).serialize(),
                    success: function () {
                        alert('User created successfully!');
                        $('#addUserModal').modal('hide');
                        $('#userTable').DataTable().ajax.reload();
                    }
                });
            });
        });

          $(document).on('click', '.edit-user-btn', function () {
            const id = $(this).data("id");
            console.log("This is user id",id);
            $.ajax({
                url: `/UserManagement/User/Edit/${id}`,
                type: 'GET',
                success: function (html) {
                   $('#editUserModalContainer').html(html);

                    const modal = new bootstrap.Modal(document.getElementById('editUserModal'));
                    modal.show();

                    $.getJSON('/Settings/Role/GetAllUserRole', function (data) {
                        let options = '<option value="">Select One</option>';
                        $.each(data, function (i, role) {
                            options += `<option value="${role.id}">${role.name}</option>`;
                        });

                        const $roleDropdown = $('#updateRoleDropdown');
                        $roleDropdown.html(options);

                        const selectedRoleId = $roleDropdown.data('selected');
                        console.log("i am role id", selectedRoleId);
                        if (selectedRoleId) {
                            $roleDropdown.val(selectedRoleId);
                        }
                    });
                },
                error: function () {
                    alert("Failed to load User data.");
                }
            });
        });

        $(document).on('submit', '#editUserForm', function (e) {
            e.preventDefault();
            const formData = new FormData(this);
            $.ajax({
                url: '/UserManagement/User/Update',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function () {
                    alert('User updated successfully.');
                    bootstrap.Modal.getInstance(document.getElementById('editUserModal')).hide();
                    $('#userTable').DataTable().ajax.reload();
                },
                error: function (xhr) {
                    alert(xhr.responseJSON?.message || 'Failed to update User.');
                }
            });
        });
    </script>
}
