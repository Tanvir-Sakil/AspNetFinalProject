@model UserManagementViewModel
@{
    ViewData["Title"] = "User Management";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        .info-box {
            display: flex;
            align-items: center;
            padding: 10px;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
            text-decoration: none;
            color: black;
        }

            .info-box:hover {
                transform: scale(1.02);
                text-decoration: none;
                color: black;
            }

        .info-box-icon {
            font-size: 2rem;
            width: 50px;
            text-align: center;
        }

        .info-box-content {
            margin-left: 10px;
        }
    </style>
}

<div class="content-wrapper" style="min-height: 838.625px;">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>User Management</h1>
                </div>
                <div class="col-sm-6">
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="col-12">
                <div class="card">
@*                     <div class="card-header">
                        <h3 class="card-title">User Management</h3>
                    </div> *@

                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-3 col-sm-6 col-12">
                                <a href="/Customers" class="info-box" style="background-color:#c2a5d6;">
                                    <span class="info-box-icon"><i class="fas fa-user"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Customer</span>
                                        <span class="info-box-number">@Model.TotalCustomer</span>
                                    </div>
                                </a>
                            </div>

                            <div class="col-md-3 col-sm-6 col-12">
                                <a href="/UserManagement/Supplier" class="info-box" style="background-color:#e1b2dc;">
                                    <span class="info-box-icon"><i class="fas fa-truck"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Supplier</span>
                                        <span class="info-box-number">@Model.TotalSupplier</span>
                                    </div>
                                </a>
                            </div>

                            <div class="col-md-3 col-sm-6 col-12">
                                <a href="/UserManagement/Staff" class="info-box" style="background-color:#c9bfe3;">
                                    <span class="info-box-icon"><i class="fas fa-user-tie"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Staff/Employee</span>
                                        <span class="info-box-number">@Model.TotalStaff</span>
                                    </div>
                                </a>
                            </div>

                            <div class="col-md-3 col-sm-6 col-12">
                                <a href="/UserManagement/User" class="info-box" style="background-color:#f0d2e9;">
                                    <span class="info-box-icon"><i class="fas fa-users-cog"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">User</span>
                                        <span class="info-box-number">@Model.TotalUser</span>
                                    </div>
                                </a>
                            </div>
                        </div> 
                    </div> 
                </div> 
            </div>
        </div>
    </section>
</div>


