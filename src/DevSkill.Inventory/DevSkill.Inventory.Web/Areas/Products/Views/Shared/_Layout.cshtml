@using DevSkill.Inventory.Infrastructure.Identity
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject IHttpContextAccessor HttpContextAccessor

@{
    var userPrincipal = HttpContextAccessor.HttpContext?.User;
    var currentUser = await UserManager.GetUserAsync(userPrincipal);
    var isSuperAdmin = userPrincipal?.IsInRole("SuperAdmin") ?? false;
    var userRoles = currentUser != null
    ? await UserManager.GetRolesAsync(currentUser)
    : new List<string>();

    var primaryRole = userRoles.FirstOrDefault() ?? "No Role";
}



