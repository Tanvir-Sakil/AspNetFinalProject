@using DevSkill.Inventory.Application.Features.Products.Commands
@model AddDamageProductCommand

<div class="modal fade" id="damageProductModal" tabindex="-1" aria-labelledby="damageProductModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Damage Product Info.</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="damageProductForm">
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label>Select Product</label>
                        <select id="damageProductSelect" name="productId" class="form-control" required></select>
                    </div>
                    <div class="form-group mb-3">
                        <label>Damage Quantity</label>
                        <input type="number" class="form-control" name="quantity" required placeholder="Enter quantity" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="demageProduct" class="btn btn-primary"><i class="fas fa-save"></i> Submit</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal"><i class="fas fa-times"></i> Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
