                delay: 250,
                data: function (params) {
                    return { query: params.term };
                },
                processResults: function (data) {
                    const items = data.map(u => ({ id: u.id, text: u.text }));
                    items.push({ id: '00000000-0000-0000-0000-000000000000', text: '➕ Add new unit2...' });
                    return { results: items };
                }
            }
        });

