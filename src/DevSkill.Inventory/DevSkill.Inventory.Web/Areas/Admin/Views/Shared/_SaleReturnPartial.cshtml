@* @using DevSkill.Inventory.Web.Areas.SalesReturns.Models
@model SalesReturnViewModel

@if (Model == null || !Model.Items.Any())
{
    <div class="alert alert-warning">No sale found for the given invoice.</div>
}
else
{
    <h5>Sales Return for Invoice #: @Model.InvoiceNo</h5>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Products</th>
                <th>Sold Qty</th>
                <th>Returned Qty</th>
                <th>Quantity (Return)</th>
                <th>Unit Price</th>
                <th>Total Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="returnProductTable">
            @foreach (var item in Model.Items)
            {
                <tr data-product-id="@item.ProductID">
                    <td>@item.ProductName</td>
                    <td>@item.SoldQty</td>
                    <td>@item.ReturnedQty</td>
                    <td>
                        <input type="number" class="form-control return-qty" max="@item.ReturnableQty" data-price="@item.UnitPrice" value="0" />
                    </td>
                    <td>@item.UnitPrice</td>
                    <td class="subtotal">0</td>
                    <td><button class="btn btn-danger btn-sm remove">X</button></td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row mt-4">
        <div class="col-md-6">
            <label>Return Date</label>
            <input type="date" id="returnDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        </div>
        <div class="col-md-6">
            <label>Customer</label>
            <select id="customerSelect" class="form-select"></select>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-4">
            <label>Total Return</label>
            <input type="text" id="totalReturnAmount" class="form-control" readonly />
        </div>
        <div class="col-md-4">
            <label>Service Charge</label>
            <input type="number" id="serviceCharge" class="form-control" value="0" />
        </div>
        <div class="col-md-4">
            <label>Invoice No</label>
            <input type="text" id="invoiceNo" class="form-control" value="@Model.InvoiceNo" readonly />
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-4">
            <label>Account Type</label>
            <select id="accountTypeSelect" class="form-select"></select>
        </div>
        <div class="col-md-4">
            <label>Account No</label>
            <select id="accountNoSelect" class="form-select"></select>
        </div>
        <div class="col-md-4">
            <label>Note</label>
            <input type="text" id="note" class="form-control" />
        </div>
    </div>

    <div class="text-end mt-4">
        <button id="submitReturn" class="btn btn-success">Submit Return</button>
    </div>
}
 *@