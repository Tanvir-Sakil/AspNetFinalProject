@model DevSkill.Inventory.Web.Areas.CompanyProfile.Models.CompanyProfileViewModel

@{
    ViewData["Title"] = "Company Profile";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    .card-header {
        background: linear-gradient(to right, #4e54c8, #8f94fb);
        color: white;
        font-weight: bold;
    }

    label {
        font-weight: 600;
    }

    img.preview {
        border: 1px solid #ccc;
        padding: 5px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 3px rgba(0,0,0,0.1);
    }
</style>

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header">
            <i class="fas fa-building me-2"></i> Update Company Profile
        </div>
        <div class="card-body">
            <form asp-action="UpdateCompanyProfile" enctype="multipart/form-data" method="post">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="CompanyName" class="form-control" placeholder="Company Name" />
                            <label asp-for="CompanyName"></label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Address" class="form-control" placeholder="Address" />
                            <label asp-for="Address"></label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Mobile" class="form-control" placeholder="Mobile" />
                            <label asp-for="Mobile"></label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <label asp-for="Email"></label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="OpeningBalance" class="form-control" placeholder="Opening Balance" />
                            <label asp-for="OpeningBalance"></label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Web" class="form-control" placeholder="Website" />
                            <label asp-for="Web"></label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Facebook" class="form-control" placeholder="Facebook" />
                            <label asp-for="Facebook"></label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="VatReg" class="form-control" placeholder="VAT Registration" />
                            <label asp-for="VatReg"></label>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Company Logo</label>
                            <input asp-for="LogoFile" type="file" class="form-control" />
                            @if (!string.IsNullOrEmpty(Model.ExistingLogoPath))
                            {
                                <p class="mt-2">Current: <img src="@Model.ExistingLogoPath" height="50" class="preview" /></p>
                            }
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Background Image</label>
                            <input asp-for="BgImage" type="file" class="form-control" />
                            @if (!string.IsNullOrEmpty(Model.ExistingBgImagePath))
                            {
                                <p class="mt-2">Current: <img src="@Model.ExistingBgImagePath" height="50" class="preview" /></p>
                            }
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Favicon</label>
                            <input asp-for="FavFile" type="file" class="form-control" />
                            @if (!string.IsNullOrEmpty(Model.ExistingFavIconPath))
                            {
                                <p class="mt-2">Current: <img src="@Model.ExistingFavIconPath" height="32" class="preview" /></p>
                            }
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Authorized Signature</label>
                            <input asp-for="SignatureFile" type="file" class="form-control" />
                            @if (!string.IsNullOrEmpty(Model.ExistingSignaturePath))
                            {
                                <p class="mt-2">Current: <img src="@Model.ExistingSignaturePath" height="40" class="preview" /></p>
                            }
                        </div>
                    </div>
                </div>

                <input type="hidden" asp-for="Id" />

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save me-1"></i> Update Profile
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
