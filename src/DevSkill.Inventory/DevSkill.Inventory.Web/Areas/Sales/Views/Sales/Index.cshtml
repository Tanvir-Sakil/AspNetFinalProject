
@model SaleListModel

@{
    ViewData["Title"] = "Sales List";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/3.0.2/css/buttons.dataTables.min.css" />

    <style>
        .page-container {
            max-width: 100%;
            margin: 4px 4px;
            padding: 1.5rem;
        }

        .app-content-header {
            background: linear-gradient(45deg, #007bff, #0056b3);
            padding: 20px;
            border-radius: 10px;
            color: #fff;
            margin-bottom: 25px;
        }

        .app-content-header h3 {
            font-weight: 700;
            margin: 0;
        }
        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
            color: #0d6efd;
        }

        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            padding: 1rem 1.25rem;
        }

        .table thead th {
            background-color: #343a40;
            color: #fff;
            text-align: center;
        }

        .table tbody td {
            vertical-align: middle;
            text-align: center;
        }

        .table-hover tbody tr:hover {
            background-color: #f1f1f1;
        }

        .btn-sm {
            font-size: 0.85rem;
            padding: 5px 12px;
        }

        .search-box {
            background-color: #e9f7ef;
            border: 1px solid #d1e7dd;
            border-radius: 12px;
            padding: 25px 20px 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
            margin-bottom: 2rem;
        }

            .search-box .form-label {
                font-weight: 600;
                color: #333;
            }

            .search-box h5 {
                font-weight: bold;
                color: #28a745;
            }

        .btn-search {
            padding: 0.45rem 1.5rem;
        }

        .btn-add-sale {
            padding: 0.45rem 1.2rem;
            font-weight: 600;
            background: linear-gradient(45deg, #28a745, #218838);
            border: none;
            color: #fff;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .btn-add-sale:hover {
                background: linear-gradient(45deg, #218838, #1e7e34);
                box-shadow: 0 6px 12px rgba(30, 126, 52, 0.5);
                transform: translateY(-1px);
            }

        .table-responsive {
            margin-top: 1rem;
        }
    </style>
}



<div class="page-container">
    <div class="app-content-header mb-4 d-flex justify-content-between align-items-center flex-wrap">
        <h3><i class="fas fa-tags me-2"></i> Sales</h3>
    </div>
    <div class="card search-box">
        <div class="card-header bg-transparent border-0 pb-0">
            <h5 class="card-title"><i class="fas fa-search me-2"></i> Search Sales</h5>
        </div>
        <div class="card-body pt-3">
            <div class="row g-4">
                <div class="col-md-4">
                    <label class="form-label">Customer Name</label>
                    <input type="text" class="form-control" asp-for="SearchItem.CustomerName" placeholder="Enter customer name..." />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Total Amount From</label>
                    <input type="number" class="form-control" asp-for="SearchItem.TotalAmountFrom" />
                </div>
                <div class="col-md-4">
                    <label for="Search_DateTo" class="form-label">Total Amount To</label>
                    <input type="number" class="form-control" asp-for="SearchItem.TotalAmountTo" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Paid Amount From</label>
                    <input type="number" class="form-control" asp-for="SearchItem.PaidAmountFrom" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Paid Amount To</label>
                    <input type="number" class="form-control" asp-for="SearchItem.PaidAmountTo" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Due Amount From</label>
                    <input type="number" class="form-control" asp-for="SearchItem.TotalAmountFrom" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Due Amount To</label>
                    <input type="number" class="form-control" asp-for="SearchItem.TotalAmountTo" />
                </div>
            </div>
        </div>
        <div class="card-footer bg-transparent border-0 pt-3">
            <button id="searchButton" class="btn btn-primary float-end btn-search">
                <i class="fas fa-search me-1"></i> Search
            </button>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header d-flex align-items-center">
            <h5 class="card-title mb-0">
                <i class="fas fa-list me-2 text-primary"></i> Sales List
            </h5>
            <div class="ms-auto">
                <a href="/Sales/Add" class="btn btn-add-sale">
                    <i class="fas fa-plus me-1"></i> Add Sale
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="salesTable" class="table table-striped table-bordered table-hover w-100">
                    <thead>
                        <tr>
                            <th>#SN</th>
                            <th>Invoice No</th>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Total</th>
                            <th>Paid</th>
                            <th>Due</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody> 
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<partial name="_AddPaymentModal" />
<partial name="_ModalPartial" />


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.min.js"></script>
  @*   <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script> *@

    <script src="https://cdn.datatables.net/buttons/3.0.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.0.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.0.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.0.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            const table = $('#salesTable').DataTable({
                processing: true,
                serverSide: true,
                responsive: true,
                lengthChange: true,
                autoWidth: false,
                dom: '<"top d-flex justify-content-between"lB>rt<"bottom"ip>',
                buttons: ['copy', 'csv', 'excel', 'pdf', 'print'],
                lengthMenu: [
                    [10, 25, 50, -1],
                    [10, 25, 50, 'All']
                ],
                ajax: {
                    url: '/Sales/GetAllSalesList',
                    type: 'POST',
                    contentType: "application/json",
                    dataType: "json",
                    data: function (d) {
                        d.CustomerName = $("#SearchItem_CustomerName").val();
                        d.TotalAmountFrom = $("#SearchItem_TotalAmountFrom").val() || null;
                        d.TotalAmountTo = $("#SearchItem_TotalAmountTo").val() || null;
                        d.PaidAmountFrom = $("#SearchItem_PaidAmountFrom").val() || null;
                        d.PaidAmountTo = $("#SearchItem_PaidAmountTo").val() || null;
                        d.DueAmountFrom = $("#SearchItem_DueAmountFrom").val() || null;
                        d.DueAmountTo = $("#SearchItem_DueAmountTo").val() || null;
                        return JSON.stringify(d);
                    }
                },
                columns: [
                    { data: null, render: (data, type, row, meta) => meta.row + 1 },
                    { data: 'invoiceNo' },
                    { data: 'date' },
                    { data: 'customerName' },
                    { data: 'totalAmount', render: $.fn.dataTable.render.number(',', '.', 2) },
                    { data: 'paidAmount', render: $.fn.dataTable.render.number(',', '.', 2) },
                    { data: 'dueAmount', render: $.fn.dataTable.render.number(',', '.', 2) },
                    { data: 'paymentStatus' },
                    {
                        data: "id",
                        orderable: false,
                        render: function (data,type,row) {
                                    console.log("printing data ",row.paymentStatus);
                                    let paymentAction = '';
                                    if (row.paymentStatus === 'Partial Paid' || row.paymentStatus === 'Due') {
                                        
                                        paymentAction = `
                                            <button class="dropdown-item text-success payment-modal"
                                                    data-id="${row.id}" data-due="${row.dueAmount}" data-customer="${row.customerName}">
                                                <i class="fa-regular fa-plus me-2"></i>Payment
                                            </button>`;
                                    }

                            return `
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle"
                                        type="button"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    Action
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/Sales/SalesDetails/${data}" class="btn btn-info btn-sm"><i class="fa-solid fa-eye"></i>View</a>
                                    <a class="dropdown-item" href="/Sales/Details/${data}" class="btn btn-primary btn-sm">
                                    <i class="fas fa-file-invoice"></i> Challan
                                   </a>
                                    <a class="dropdown-item" href="/Sales/Edit/${data}" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i>Edit</a>
                                    ${paymentAction}
                                    <button class="dropdown-item text-danger show-bs-modal" data-id="${data}">
                                        <i class="fas fa-trash me-2"></i>Delete
                                    </button>
                                </div>
                            </div>`;
                        }
                     }

                ]
            });

             $(document).on('click', '.dropdown-toggle', function(e) {
            e.stopPropagation();
            $(this).next('.dropdown-menu').toggleClass('show');
            });

            // Close dropdowns when clicking outside
            $(document).on('click', function(e) {
                if (!$(e.target).closest('.dropdown').length) {
                    $('.dropdown-menu').removeClass('show');
                }
            });

            $('#searchButton').click(function () {
                table.ajax.reload(null, false);
            });

            $(document).on('click', '.delete-btn', function () {
                const id = $(this).data("id");
                if (confirm("Are you sure to delete?")) {
                    $.post('/Sales/Delete', { id }, function () {
                        table.ajax.reload(null, false);
                    });
                }
            });
        });

            $(document).on('click', '.payment-modal', function () {
            const id = $(this).data('id');
            const due = $(this).data('due');
            const customer = $(this).data('customer');

            $('#paymentModal').find('#saleId').val(id);
            $('#paymentModal').find('#customerName').text(customer);
            $('#paymentModal').find('#dueAmount').val(due);

            $('#paymentModal').modal('show');
        });

          $(document).ready(function () {
          $('#accountType, #accountNo').select2({
            dropdownParent: $('#paymentModal')
          });
        });

            $(document).on('submit', '#paymentForm', function (e) {
                    e.preventDefault();
                    var formData = new FormData(this);

                    $.ajax({
                        url: '/Sales/Payment',
                        type: 'POST',
                        data: formData,
                        processData: false,
                        contentType: false,
                        success: function () {
                            alert('Payment Completed.');
                                bootstrap.Modal.getInstance(document.getElementById('paymentModal')).hide();
                            table.ajax.reload();
                        },
                        error: function (xhr) {
                            alert(xhr.responseJSON?.message || 'Failed to Payment.');
                        }
                    });
                });

            $('#salesTable').on('click', '.show-bs-modal', function () {
            let id = $(this).data("id");
            console.log("Sales id is", id);
            $('#modal-delete .modal-body p').text("Are you sure to delete this Sale?");
            $('#delete-form').attr('action', '/Sales/delete/' + id);

            var modalElement = document.getElementById('modal-delete');
            var modal = bootstrap.Modal.getOrCreateInstance(modalElement);
            modal.show();
        });
        $('#delete-button').on('click', function () {
            $('#delete-form').submit();
        });
        $('#delete-form').on('submit', function (e) {
            e.preventDefault();
            var actionUrl = $(this).attr('action');
            $.post(actionUrl)
                .done(function (response) {
                    console.log("I am response", response)
                    var modalElement = document.getElementById('modal-delete');
                    var modal = bootstrap.Modal.getInstance(modalElement);
                    modal.hide();
                    var table = $('#salesTable').DataTable();
                    table.ajax.reload(null, false);
                    alert("Sales deleted successfully.");
                })
                .fail(function () {
                    alert("Failed to delete Sales.");
                });
        });


    </script>
}
