@using DevSkill.Inventory.Domain.Dtos
@model SaleDto

@{
    ViewData["Title"] = "Challan Invoice";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .invoice {
            background: #ffffff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(0,0,0,0.08);
            max-width: 1000px;
            margin: auto;
        }

            .invoice .logo img {
                width: 150px;
            }

            .invoice address {
                font-size: 14px;
                color: #333;
                line-height: 1.6;
                word-break: break-word;
            }

            .invoice .table {
                table-layout: fixed;
                width: 100%;
            }

                .invoice .table th {
                    background-color: #0d6efd;
                    color: #fff;
                    text-align: center;
                    vertical-align: middle;
                }

                .invoice .table td {
                    text-align: center;
                    vertical-align: middle;
                    word-break: break-word;
                    white-space: normal !important;
                }

            .invoice h4 {
                margin-bottom: 0;
                font-weight: 600;
                color: #0d6efd;
                white-space: nowrap;
            }

            .invoice .inv {
                border-radius: 50px;
                background: #f2f6fc;
                border: 1px solid #dee2e6;
                min-width: 180px;
                max-width: 100%;
            }

            .invoice .row > div {
                min-width: 0;
                word-wrap: break-word;
            }

            .invoice .table-sm td,
            .invoice .table-sm th {
                padding: 0.35rem;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
                max-width: 250px;
            }

        .btn {
            border-radius: 6px;
        }

        @@media print {
            .no-print {
                display: none !important;
            }
        }

        @@media (max-width: 768px) {
            .invoice .row.invoice-info > div {
                flex: 0 0 100%;
                max-width: 100%;
                margin-bottom: 1rem;
                text-align: center;
            }

            .invoice .row.invoice-info table {
                margin: 0 auto;
            }

            .invoice .inv {
                margin: 10px auto;
            }

            .invoice .table-sm td,
            .invoice .table-sm th {
                white-space: normal;
            }
        }
    </style>
}

<div class="invoice p-3 mb-3">
    <div id="print">
        <!-- Header -->
        <div class="row invoice-info mb-4">
            <div class="col-md-6 logo">
                <img src="@Model.CompanyProfileView.LogoPath" style="width: 50%; height: auto;" />
            </div>
            <div class="col-md-6 text-end">
                <address>
                    Address: @Model.CompanyProfileView.Address<br />
                    Email: @Model.CompanyProfileView.Email<br />
                    Contact:@Model.CompanyProfileView.Mobile<br />
                    Facebook: @Model.CompanyProfileView.Facebook
                </address>
            </div>
        </div>

        <hr />

        <!-- Invoice Info -->
        <div class="row gx-2 gy-3 text-center mb-4 flex-wrap">
            <div class="col-md-4 text-start">
                <table class="table table-sm">
                    <tr><td><strong>Date:</strong></td><td>@Model.Date.ToString("dd-MM-yyyy")</td></tr>
                    <tr><td><strong>Invoice:</strong></td><td>@Model.InvoiceNo</td></tr>
                    <tr><td><strong>Client ID:</strong></td><td>@Model.Id.ToString().Substring(0, 8)</td></tr>
                </table>
            </div>
            <div class="col-md-3 d-flex justify-content-center align-items-center">
                <div class="inv px-4 py-2 text-dark text-center">
                    <h4>Challan Invoice</h4>
                </div>
            </div>
            <div class="col-md-5 text-start">
                <table class="table table-sm">
                    <tr><td><strong>Customer:</strong></td><td>@Model.CustomerName</td></tr>
                    <tr><td><strong>Address:</strong></td><td>@Model.CustomerAddress</td></tr>
                    <tr><td><strong>Contact:</strong></td><td>@Model.CustomerContact</td></tr>
                </table>
            </div>
        </div>

        <!-- Items Table -->
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#SN</th>
                    <th>Description</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int indx = 1;
                    foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@indx</td>
                            <td>@item.ProductName</td>
                            <td>@item.Quantity</td>
                        </tr>
                        indx++;
                    }
                }
            </tbody>
        </table>

        <!-- Signature Section -->
        <div class="row mt-5 text-center" id="header" style="display: none">
            <div class="col-md-6">
                <p>------------------------</p>
                <p>Received By</p>
            </div>
            <div class="col-md-6">
                <p>------------------------</p>
                <p>Authorized By</p>
            </div>
        </div>
    </div>

    <div class="row no-print mt-4 text-center">
        <div class="col-12">
            <a href="javascript:void(0)" class="btn btn-primary me-2" onclick="printDiv('print')">
                <i class="fas fa-print"></i> Print
            </a>
            <a href="@Url.Action("Index", "Sales")" class="btn btn-danger">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function printDiv(divId) {
            const printContents = document.getElementById(divId).innerHTML;
            const originalContents = document.body.innerHTML;
            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
            location.reload();
        }
    </script>
}
